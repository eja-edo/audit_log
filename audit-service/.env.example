# Environment Configuration for Audit Log Service
# Copy this file to .env and configure appropriately

# ===========================================================================
# Application Settings
# ===========================================================================
APP_NAME="Audit Log Service"
APP_VERSION="1.0.0"
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ===========================================================================
# Database Configuration
# ===========================================================================
DB_PASSWORD=secure_password_change_me_in_production
DATABASE_URL=postgresql://audit_user:${DB_PASSWORD}@postgres:5432/audit_db

# Connection Pool
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_COMMAND_TIMEOUT=60

# ===========================================================================
# Security Configuration
# ===========================================================================
# Path to master encryption key
MASTER_KEY_PATH=/keys/master.key

# Admin authentication (implement your own auth)
ADMIN_TOKEN_SECRET=change_this_to_a_secure_random_string

# ===========================================================================
# Rate Limiting
# ===========================================================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60

# ===========================================================================
# Meilisearch (Optional)
# ===========================================================================
# Uncomment to enable Meilisearch integration
# MEILISEARCH_URL=http://meilisearch:7700
# MEILISEARCH_API_KEY=masterKey123

# ===========================================================================
# Monitoring
# ===========================================================================
ENABLE_METRICS=true
GRAFANA_PASSWORD=secure_grafana_password
GRAFANA_ROOT_URL=http://localhost:3000

# ===========================================================================
# TLS/SSL Configuration
# ===========================================================================
# Configure paths to your certificates for mTLS
# TLS_CERT_PATH=/certs/server.crt
# TLS_KEY_PATH=/certs/server.key
# TLS_CA_PATH=/certs/ca.crt
